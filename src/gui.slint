import { Button, ComboBox, VerticalBox, LineEdit, HorizontalBox, ListView } from "std-widgets.slint";

export global Global {
    callback playAudio(string);
    callback stopAudio(string);
}

struct Mic {
    name: string,
    playing: bool,
}

export component MainWindow inherits Window {
    width: 800px;
    height: 600px;
    title: "Virtual Audio Streamer";
    background: #ffffff;

    in property <string> localIp;
    in property <image> qrCode;
    in property <[Mic]> mics: [];

    HorizontalBox {
        padding: 40px;
        spacing: 40px;

        VerticalBox {
            width: 50%;
            spacing: 24px;
            alignment: start;

            Text {
                text: "Virtual Audio";
                font-size: 32px;
                font-weight: 700;
            }

            VerticalBox {
                spacing: 8px;

                Text {
                    text: "Server Address";
                    color: #71717A;
                }

                Rectangle {
                    height: 48px;
                    border-radius: 8px;
                    background: #F4F4F5;
                    HorizontalBox {
                        padding: 12px;
                        Text {
                            text: root.localIp;
                            color: #18181B;
                            font-size: 16px;
                        }
                    }
                }
            }

            if (root.mics.length > 0): VerticalBox {
                spacing: 8px;

                Text {
                    text: "Available Microphones";
                    color: #71717A;
                }

                for mic in mics: Rectangle {
                    height: 48px;
                    border-radius: 8px;
                    background: #F4F4F5;

                    HorizontalBox {
                        padding-left: 12px;
                        padding-right: 12px;
                        spacing: 12px;

                        Text {
                            text: mic.name;
                            vertical-alignment: center;
                            color: #18181B;
                        }

                        TouchArea {
                            clicked => {
                                if (mic.playing) {
                                    Global.stopAudio(mic.name);
                                    mic.playing = false;
                                } else {
                                    Global.playAudio(mic.name);
                                    mic.playing = true;
                                }
                            }

                            Rectangle {
                                width: 80px;
                                height: 32px;
                                border-radius: 6px;
                                background: mic.playing ? #DC2626 : #22C55E;

                                Text {
                                    text: mic.playing ? "Stop" : "Play";
                                    color: white;
                                    font-weight: 600;
                                }
                            }
                        }
                    }
                }
            }

            if (root.mics.length == 0): Rectangle {
                height: 120px;
                border-radius: 8px;
                background: #F4F4F5;

                VerticalBox {
                    alignment: center;
                    Text {
                        text: "Waiting for connection...";
                        color: #71717A;
                        horizontal-alignment: center;
                    }
                }
            }
        }

        VerticalBox {
            width: 50%;
            spacing: 24px;
            alignment: start;

            Text {
                text: "Connect Device";
                font-size: 20px;
                font-weight: 600;
            }

            Image {
                source: root.qrCode;
                width: 280px;
                height: 280px;
            }

            Text {
                text: "Scan QR code to connect\nyour device";
                color: #71717A;
                horizontal-alignment: center;
            }
        }
    }
}
